apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: {{ clusterissuer_name }}
spec:
  acme:
    email: {{ lets_encrypt_email }}
    server: {{ lets_encrypt_server }}
    privateKeySecretRef:
      name: {{ clusterissuer_name }}-account-key
    solvers:
      - http01:
          ingress:
            class: {{ acme_ingress_class }}