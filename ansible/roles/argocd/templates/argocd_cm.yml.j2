apiVersion: v1
kind: ConfigMap
metadata:
  name: argocd-cm
  namespace: {{ argocd_namespace }}
data:
{% for key, value in (argocd_cm_data | default({}) | dictsort) %}
{% if '\n' in (value | string) %}
  "{{ key }}": |
{{ value | string | indent(4, true) }}
{% else %}
  "{{ key }}": {{ (value | string) | to_json }}
{% endif %}
{% endfor %}
